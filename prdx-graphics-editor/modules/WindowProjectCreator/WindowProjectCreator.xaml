<Window x:Class="prdx_graphics_editor.modules.WindowProjectCreator.WindowProjectCreator"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:prdx_graphics_editor.modules.WindowProjectCreator"
        mc:Ignorable="d"
        Title="ProjectCreator" Height="300" Width="300">
    <DockPanel>
        <DockPanel Height="25" Width="200" DockPanel.Dock="Top">
            <Label HorizontalAlignment="Left" Content="Ширина (px)"/>
            <TextBox x:Name="widthInput" PreviewTextInput="checkForNumbers" HorizontalAlignment="Right" TextAlignment="Right" VerticalAlignment="Center" Width="100" Text="1920"/>
        </DockPanel>
        <DockPanel Height="25" Width="200" DockPanel.Dock="Top">
            <Label HorizontalAlignment="Left" Content="Ширина (px)"/>
            <TextBox x:Name="heightInput" HorizontalAlignment="Right" TextAlignment="Right" VerticalAlignment="Center" Width="100" Text="1080"/>
        </DockPanel>
        <DockPanel Height="25" Width="200" DockPanel.Dock="Bottom">
            <Button Width="125" Content="Создать проект" Click="CreateProject"/>
            <Button Content="Отмена" Click="CancelProjectCreation"/>
        </DockPanel>
    </DockPanel>
</Window>
