      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:prdx_graphics_editor"
      mc:Ignorable="d" 
      d:DesignHeight="200" d:DesignWidth="300"
      Title="FormColorPicker">

    <Grid>
        <TextBox x:Name="TextBoxColorRgb" Background="Gray" Width="100" Height="25" TextChanged="OnNewHex"/>
		<Border Width="25" Height="25" BorderThickness="1" Margin="26,7,49,3">
			<Rectangle x:Name="PreviewColor" ></Rectangle>
		</Border> <!--"BorderBrush="#444" BorderBrush="Gray"-->
	</Grid>
</Page>
