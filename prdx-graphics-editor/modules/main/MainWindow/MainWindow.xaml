<Window x:Class="prdx_graphics_editor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:prdx_graphics_editor"
        mc:Ignorable="d"
        Title="Graphic editor" Height="1080" Width="1920" MinHeight="500" MinWidth="600">
    <Grid Background="#333333">
        <DockPanel HorizontalAlignment="Left" LastChildFill="False" VerticalAlignment="Stretch" Width="200" Margin="0,20" Background="Gray">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="200"/>
                    <RowDefinition Height="3*"/>
                </Grid.RowDefinitions>
                <Frame Grid.Row="0" x:Name="ToolsPage" Source="..\PageTools\PageTools.xaml"/>
                <Frame Grid.Row="1" x:Name="ToolParamsPage" Source="..\ToolParams\ToolParams.xaml"/>
            </Grid>
        </DockPanel>
        <DockPanel HorizontalAlignment="Stretch" Height="20" LastChildFill="False" VerticalAlignment="Top" Background="DarkGray">
            <Menu FlowDirection="LeftToRight">
                <MenuItem Header="Файл" VerticalAlignment="Stretch">
                    <MenuItem Header="Создать проект" Click="CreateProject"/>
                    <MenuItem Header="Открыть проект"/>
                    <Separator/>
                    <MenuItem Header="Сохранить"/>
                    <MenuItem Header="Сохранить как..."/>
                    <Separator/>
                    <MenuItem Header="Импорт изображения" Click="ImportToProject"/>
                    <MenuItem Header="Экспортировать как..." Click="ExportProject"/>
                    <Separator/>
                    <MenuItem Header="Выход"/>
                </MenuItem>
                <MenuItem Header="Правка" VerticalAlignment="Stretch">
                    <MenuItem Header="Отменить последнее действие" Click="ClickUndo"/>
                    <MenuItem Header="Вернуть последнее действие" Click="ClickRedo"/>
                    <Separator/>
                    <MenuItem Header="Вырезать"/>
                    <MenuItem Header="Копировать"/>
                    <MenuItem Header="Вставить"/>
                </MenuItem>
                <MenuItem Header="Выделение" VerticalAlignment="Stretch">
                    <MenuItem Header="Выделить всё" Click="SelectAll"/>
                    <MenuItem Header="Снять выделение" Click="SelectClear"/>
                </MenuItem>
            </Menu>
        </DockPanel>
        <DockPanel HorizontalAlignment="Right" LastChildFill="False" VerticalAlignment="Stretch" Width="200" Margin="0,20" Background="Gray">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="2*"/>
                    <RowDefinition Height="3*"/>
                </Grid.RowDefinitions>
                <Frame Grid.Row="0" x:Name="FrameHistory"/>
                <Frame Grid.Row="1" x:Name="LayersPage" Source="..\Layers\Layers.xaml"/>
            </Grid>
        </DockPanel>

        <DockPanel HorizontalAlignment="Stretch" Height="20" LastChildFill="False" VerticalAlignment="Bottom" Background="DarkGray">
            <Button Click="Button_Click">pick color</Button>
        </DockPanel>

        <Frame x:Name="FrameCanvas" HorizontalAlignment="Center" VerticalAlignment="Center"/>
    </Grid>
</Window>
