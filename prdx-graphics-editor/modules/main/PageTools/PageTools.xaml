<Page x:Class="prdx_graphics_editor.PageTools"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:prdx_graphics_editor"
      mc:Ignorable="d" 
      d:DesignHeight="250" d:DesignWidth="200"
      Title="PageTools">

    <Grid>
        <DockPanel VerticalAlignment="Stretch" Grid.Row="0" Width="200" HorizontalAlignment="Center" LastChildFill="False">
            <Label x:Name="mainLabel" FontSize="24" FontWeight="Bold" DockPanel.Dock="Top" HorizontalAlignment="Center" VerticalAlignment="Top">Инструменты</Label>
            <Grid x:Name="toolGrid" Background="DimGray" DockPanel.Dock="Top" Margin="10,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="35"/>
                    <RowDefinition Height="35"/>
                    <RowDefinition Height="35"/>
                </Grid.RowDefinitions>
                <RadioButton Grid.Row="0" Grid.Column="0" x:Name="ButtonPencil" Background="Transparent" Style="{StaticResource {x:Type ToggleButton}}" Checked="ChangeTool" ToolTip="Карандаш">
                    <Image Margin="2" Stretch="Fill" Source="/modules/main/PageTools/icons/pencil.png"/>
                </RadioButton>
                <RadioButton Grid.Row="0" Grid.Column="1" x:Name="ButtonBrush" Background="Transparent" Style="{StaticResource {x:Type ToggleButton}}" Checked="ChangeTool" ToolTip="Кисть">
                    <Image Margin="2" Stretch="Fill" Source="/modules/main/PageTools/icons/brush.png"/>
                </RadioButton>
                <RadioButton Grid.Row="0" Grid.Column="2" x:Name="ButtonEraser" Background="Transparent" Style="{StaticResource {x:Type ToggleButton}}" Checked="ChangeTool" ToolTip="Ластик">
                    <Image Margin="2" Stretch="Fill" Source="/modules/main/PageTools/icons/eraser.png"/>
                </RadioButton>
                <RadioButton Grid.Row="0" Grid.Column="3" x:Name="ButtonSelect" Background="Transparent" Style="{StaticResource {x:Type ToggleButton}}" Checked="ChangeTool" ToolTip="Выделение">
                    <Image Margin="2" Stretch="Fill" Source="/modules/main/PageTools/icons/selection.png"/>
                </RadioButton>
                <RadioButton Grid.Row="0" Grid.Column="4" x:Name="ButtonFill" Background="Transparent" Style="{StaticResource {x:Type ToggleButton}}" Checked="ChangeTool" ToolTip="Заливка">
                    <Image Margin="2" Stretch="Fill" Source="/modules/main/PageTools/icons/fill.png"/>
                </RadioButton>
                <RadioButton Grid.Row="1" Grid.Column="0" x:Name="ButtonSquare" Background="Transparent" Style="{StaticResource {x:Type ToggleButton}}" Checked="ChangeTool" ToolTip="Прямоугольник">
                    <Image Margin="4" Stretch="Fill" Source="/modules/main/PageTools/icons/square.png"/>
                </RadioButton>
                <RadioButton Grid.Row="1" Grid.Column="1" x:Name="ButtonCircle" Background="Transparent" Style="{StaticResource {x:Type ToggleButton}}" Checked="ChangeTool" ToolTip="Эллипс">
                    <Image Margin="3" Stretch="Fill" Source="/modules/main/PageTools/icons/circle.png"/>
                </RadioButton>
                <RadioButton Grid.Row="1" Grid.Column="2" x:Name="ButtonTriangle" Background="Transparent" Style="{StaticResource {x:Type ToggleButton}}" Checked="ChangeTool" ToolTip="Треугольник">
                    <Image Margin="2" Stretch="Fill" Source="/modules/main/PageTools/icons/triangle.png"/>
                </RadioButton>
                <RadioButton Grid.Row="1" Grid.Column="3" x:Name="ButtonLine" Background="Transparent" Style="{StaticResource {x:Type ToggleButton}}" Checked="ChangeTool" ToolTip="Линия">
                    <Image Margin="2" Stretch="Fill" Source="/modules/main/PageTools/icons/line.png"/>
                </RadioButton>
                <RadioButton Grid.Row="1" Grid.Column="4" x:Name="ButtonArrow" Background="Transparent" Style="{StaticResource {x:Type ToggleButton}}" Checked="ChangeTool" ToolTip="Стрелка">
                    <Image Margin="2" Stretch="Fill" Source="/modules/main/PageTools/icons/arrow.png"/>
                </RadioButton>
            </Grid>
            <Grid x:Name="colorGrid" DockPanel.Dock="Top" Width="125" Height="50" Background="DimGray">
                <Border Width="35" Height="35" BorderBrush="#444" BorderThickness="1" Margin="0,10,45,5">
                    <Button x:Name="buttonBackgroundColor" BorderBrush="Gray" Click="ChangeBackgroundColor"></Button>
                </Border>
                <Border Width="35" Height="35" BorderBrush="#444" BorderThickness="1" Margin="10,4,80,10">
                    <Button x:Name="buttonForegroundColor" BorderBrush="Gray" Click="ChangeForegroundColor"></Button>
                </Border>
                <Button x:Name="swapButton" Width="35" Height="35" Click="SwitchColors" Background="Transparent" ToolTip="Поменять основной и фоновый цвета" Margin="60,7,10,8" BorderBrush="#444">
                    <Image Margin="2" Stretch="Fill" Source="/modules/main/PageTools/icons/swap.png"/>
                </Button>
            </Grid>
        </DockPanel>
    </Grid>
</Page>
